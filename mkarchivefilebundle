#!/bin/env bash

if [[ -z "${1}" ]]; then
 if [[ -z "${PYVERSION}" ]]; then
  export PYVER="3"
 else
  export PYVER="${PYVERSION}"
 fi
else
 export PYVER="${1}"
fi

#export PYTHONPATH="$(which python${PYVER})"
export PYTHONPATH="$(command -v python${PYVER})"

if [[ -z "${2}" ]]; then
 infile="foxfile.py"
 outfilebin="${infile%.*}"
 outfilezip="${infile%.*}.zip"
else
 if [[ -f "./${2}" ]]; then
  infile="${2}"
  outfilebin="${infile%.*}"
  outfilezip="${infile%.*}.zip"
 else
  infile="foxfile.py"
  outfilebin="${infile%.*}"
  outfilezip="${infile%.*}.zip"
 fi
fi

if ! [ -x "$(command -v python${PYVER})" ]; then
 echo "Error: python${PYVER} is not installed." >&2
 exit 1
fi

if [[ -f "./foxfile.py" ]]; then
 ${PYTHONPATH} ./foxfile.py "${infile}"
 exit 0
fi

mkdir -p -v /tmp/pybundle
cp -r -v ./${infile} /tmp/pybundle/__main__.py
cp -r -v ./pyfoxfile.py   /tmp/pybundle/pyfoxfile.py
export OLDPATH="$(pwd)"
cd ./bundle/python${PYVER}
rm -rfv *
cd ${OLDPATH}
cd /tmp/pybundle
zip -v ./${outfilezip} -r .
echo '#!/usr/bin/env python'${PYVER} > ./${outfilebin}
echo '' >> ./${outfilebin}
cat ./${outfilezip} >> ./${outfilebin}
chmod -v +x ./${outfilebin}
cd ${OLDPATH}
mv -v /tmp/pybundle/${outfilebin} ./bundle/python${PYVER}/${outfilebin}
rm -rfv /tmp/pybundle
cd ./bundle/python${PYVER}
chmod -v +x ./${outfilebin}
cd ${OLDPATH}
